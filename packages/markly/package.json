{
  "name": "markly",
  "version": "0.0.0",
  "description": "Core library for Markly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neuronexul/markly.git",
    "directory": "packages/markly"
  },
  "type": "module",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@turbo/gen": "^2.7.6",
    "@types/node": "^25.0.10",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "zod": "^4.3.6"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}