{
  "name": "draftly",
  "version": "1.0.0",
  "description": "Core library for draftly",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/neuronexul/draftly.git",
    "directory": "packages/draftly"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@turbo/gen": "^2.7.6",
    "@types/dompurify": "^3.2.0",
    "@types/node": "^25.0.10",
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@lezer/common": "^1.5.0",
    "@lezer/highlight": "^1.2.3",
    "@lezer/markdown": "^1.6.3",
    "dompurify": "^3.3.1",
    "katex": "^0.16.28",
    "mermaid": "^11.12.2",
    "style-mod": "^4.1.3",
    "zod": "^4.3.6"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./editor": {
      "types": "./dist/editor/index.d.ts",
      "import": "./dist/editor/index.js",
      "require": "./dist/editor/index.cjs",
      "default": "./dist/editor/index.js"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins/index.js",
      "require": "./dist/plugins/index.cjs",
      "default": "./dist/plugins/index.js"
    },
    "./preview": {
      "types": "./dist/preview/index.d.ts",
      "import": "./dist/preview/index.js",
      "require": "./dist/preview/index.cjs",
      "default": "./dist/preview/index.js"
    },
    "./src": {
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.11"
  }
}